.fullscreen-canvas {
    width: 100%;
    height: 100%;
}

.text-container {
    flex-direction: row;
    width: auto;
    justify-content: center;
    padding: 10%;
    padding-left: 5px;
    padding-right: 5px;
    padding-top: 5px;
    padding-bottom: 5px;
    font-size: 32px;
    color: rgb(255, 255, 255);
    align-items: center;
    -unity-text-align: upper-center;
    flex-wrap: wrap;
    max-width: 90%;
    max-height: 90%;
    overflow: visible;
}
